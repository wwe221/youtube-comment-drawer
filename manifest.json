{
  "manifest_version": 3,
  "name": "YouTube Extension",
  "version": "1.0",
  "description": "A simple YouTube Chrome extension.",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
