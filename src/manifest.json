{
  "manifest_version": 3,
  "name": "YouTube Extension",
  "version": "1.0",
  "description": "A simple YouTube Chrome extension.",
  "permissions": [
    "activeTab", "webNavigation", "notifications"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "jquery-3.7.1.js",
        "toastr.js",
        "indexed_database.js",
        "content.js"
      ],
      "css": [
        "toastr.scss"
      ]
    }
  ]
}